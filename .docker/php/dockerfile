FROM php:7.4-fpm-alpine

RUN apk update && apk upgrade && apk add \
        git \
        zlib-dev \
        libxml2-dev \
        libzip-dev \
        icu-dev \
    && docker-php-ext-install \
        zip \
        intl \
        mysqli \
        pdo pdo_mysql

RUN curl -sS https://getcomposer.org/installer | php && mv composer.phar /usr/local/bin/composer
WORKDIR /var/www/otaku-index/
